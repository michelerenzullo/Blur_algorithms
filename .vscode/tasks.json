{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build with clang",
        "type": "shell",
        "command": "/usr/bin/clang++",
        "args": [
          "-std=c++2a",
          //"pffft_pommier/pffft.c",
          "Source.cpp",
          "-IFastBoxBlur",
          "-Ipffft_pommier",
          "-Lpffft_pommier",
          "-lpffft",
          "-I/opt/local/include/opencv4",
          "-Ipocketfft",
          //"-Lpffft/build",
          "-L/opt/local/lib/opencv4",
          "-lopencv_core",
          "-lopencv_imgproc",
          "-lopencv_imgcodecs",
          "-DMYLOOP",
          "-O3",
          //"-DSINGLE",
          "-framework","Accelerate",
          "-pthread",
          "-Wno-deprecated-anon-enum-enum-conversion",
          "-o", "Source"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task for building Source.cpp using clang++"
      }
    ]
  }